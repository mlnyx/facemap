# 환경 변수 설정 예시
# 실제 배포 시 이 파일을 복사하여 .env 파일로 만들고 값을 설정하세요

# Flask 설정
FLASK_ENV=production
FLASK_DEBUG=False

# 서버 설정
HOST=0.0.0.0
PORT=5001

# 업로드 설정
MAX_CONTENT_LENGTH=16777216  # 16MB in bytes

# 보안 설정 (실제 배포 시 변경 필요)
SECRET_KEY=your-secret-key-here-change-this-in-production

# 로깅 레벨
LOG_LEVEL=INFO
